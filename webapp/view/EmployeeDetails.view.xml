<mvc:View controllerName="employees.controller.EmployeeDetails"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    core:require="{DateType: 'sap/ui/model/type/Date'}">
<Page
        title="Employee Details"
        showNavButton="true"
        navButtonPress=".onNavBack">

        <content>

            <!-- HEADER SECTION -->
            <ObjectHeader
                title="{empData>/FullName}"
                number="{empData>/EmpId}"
                numberUnit=":Employee ID"
                numberTextDirection="RTL"
                numberState="Error"
                icon="sap-icon://employee"
                responsive="true">
                <attributes>
                    <ObjectAttribute
                        title="Position"
                        text="{empData>/Positions}" />
                    <ObjectAttribute
                        title="Hire Date"
                        text="{
                            path: 'empData>/JoinDate',
                            type: 'sap.ui.model.type.Date',
                            formatOptions: { pattern: 'dd.MM.yyyy' }
                        }" />
                </attributes>
            </ObjectHeader>

            <!-- PERSONAL INFORMATION -->
            <Panel headerText="Personal Information" expandable="true" expanded="true">
                <content>
                    <form:SimpleForm
                        editable="false"
                        layout="ResponsiveGridLayout">

                        <Label text="First Name" />
                        <Text text="{empData>/FirstName}" />

                        <Label text="Last Name" />
                        <Text text="{empData>/LastName}" />

                        <Label text="Date of Birth" />
                        <Text text="{
                            path: 'empData>/Dob',
                            type: 'sap.ui.model.type.Date',
                            formatOptions: { pattern: 'dd.MM.yyyy' }
                        }" />

                        <Label text="National ID" />
                        <Text text="{empData>/NationalId}" />

                        <Label text="Gender" />
                        <Text text="{empData>/Gender}" />
                    </form:SimpleForm >
                </content>
            </Panel>

            <!-- CONTACT INFORMATION -->
            <Panel headerText="Contact Information" expandable="true" expanded="true">
                <content>
                    <form:SimpleForm 
                        editable="false"
                        layout="ResponsiveGridLayout">

                        <Label text="Email" />
                        <Text text="{empData>/Email}" />

                        <Label text="Phone" />
                        <Text text="{empData>/Phone}" />

                        <Label text="Address" />
                        <Text text="{empData>/Address}" />

                    </form:SimpleForm >
                </content>
            </Panel>

            <!-- JOB DETAILS -->
            <Panel headerText="Job Details" expandable="true" expanded="true">
                <content>
                    <form:SimpleForm 
                        editable="false"
                        layout="ResponsiveGridLayout">

                        <Label text="Position" />
                        <Text text="{empData>/Positions}" />

                        <Label text="Hire Date" />
                        <Text text="{
                            path: 'empData>/JoinDate',
                            type: 'sap.ui.model.type.Date',
                            formatOptions: { pattern: 'dd.MM.yyyy' }
                        }" />

                        <Label text="Status" />
                        <Text text="{empData>/Status}" />

                        <Label text="Salary" />
                        <Text text="{empData>/Salary}" />

                    </form:SimpleForm >
                </content>
            </Panel>

        </content>
    </Page>
</mvc:View>